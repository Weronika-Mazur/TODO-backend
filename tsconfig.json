{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./*.d.ts"]
  },
  "include": ["./**/*.ts", "./*.d.ts", "./*.ts"],
  "exclude": ["node_modules", ".vscode"],
  "ts-node": {
    "files": true
  }
}
